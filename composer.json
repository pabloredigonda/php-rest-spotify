{
    "require": {
        "php": "^7.4",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "vlucas/phpdotenv": "^2.4",
        "league/fractal": "^0.16.0",
        "php-di/slim-bridge": "^1.0",
        "mockery/mockery": "^1.0",
        "ramsey/uuid": "^2.9",
        "dflydev/fig-cookies": "^1.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/Core/",
            "Delivery\\": "src/Delivery"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    }
}
